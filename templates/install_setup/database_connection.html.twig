{% extends 'base.html.twig' %}

{% block title %}Install Myddleware{% endblock %}

{% block body %}
    {# Logo myddleware #}
    <div class="logo-row">
        <img src="build/images/logo/logo1.png" alt="Myddleware" class="logo-register">
    </div>
    <div class="install">
        <div class="card-body">
            <h3 class="install-title">Install Step 3 : checking Myddleware is connected to the database</h3>
            <p>Database connection check</p>

            {% if connection_failed_message %}
                <p class="alert-danger">{{ connection_failed_message }}</p>
                <p>Go back to the previous page to reset your database connection</p>
            {% elseif connection_success_message %}
                <p class="alert-success">{{ connection_success_message }}</p>
            {% endif %}
            <div class="btn-group d-flex justify-content-center mt-5">
                <a href="{{ path('database_setup') }}" id="previous" role="button" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i>
                    {{ 'install.previous' | trans }}
                </a>
            {% if connection_failed_message %}
                <button type="button" class="btn btn-light btn-lg" id="next-btn" disabled>
                    {{ 'install.next' | trans }}
                    <i class="fas fa-arrow-right"></i>
                </button>
            {% elseif connection_success_message %}
                <a href="{{ path('database_fixtures_load') }}" id="next" role="button"  class="btn btn-outline-primary btn-lg">
                    {{ 'install.next' | trans }}
                    <i class="fas fa-arrow-right"></i>
                </a>
            {% endif %}

              <button class="home_item btn btn-primary"><a href="{{path('app_load_fixtures')}}">Next</a></button>
        </div>   
    </div>
    
{% endblock %}