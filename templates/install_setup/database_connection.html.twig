{% extends 'base.html.twig' %}

{% block title %}Install Myddleware{% endblock %}

{% block body %}
    {# Logo myddleware #}
    <div class="logo-row">
        <img src="build/images/logo/logo1.png" alt="Myddleware" class="logo-register">
    </div>
    <div class="install">
        <div class="card-body">
            <h3 class="install-title">Install Step 3 : checking Myddleware is connected to the database</h3>
            <p>Database connection check</p>
            {% if connection_failed_message %}
                <p class="alert-danger">{{ connection_failed_message }}</p>
                <p>Go back to the previous page to reset your database connection</p>
            {% elseif connection_success_message %}
                <p class="alert-success">{{ connection_success_message }}</p>
            {% endif %}
                <a href="{{ path('app_database_setup') }}" id="previous" role="button" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i>
                    Previous
                </a>
            {% if connection_failed_message %}
                <button type="button" class="btn btn-light btn-lg" id="next-btn" disabled>
                    Next
                    <i class="fas fa-arrow-right"></i>
                </button>
            {% elseif connection_success_message %}
                <a href="{{ path('app_load_fixtures') }}" id="next" role="button"  class="btn btn-primary btn-lg">
                    Next
                    <i class="fas fa-arrow-right"></i>
                </a>
            {% endif %}
        </div>   
    </div>                          
{% endblock %}
